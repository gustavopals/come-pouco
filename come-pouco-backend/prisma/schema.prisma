generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id           Int      @id @default(autoincrement())
  fullName     String   @map("full_name") @db.VarChar(120)
  email        String   @unique @db.VarChar(255)
  passwordHash String   @map("password_hash") @db.VarChar(255)
  role         UserRole @default(USER)
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamp(6)

  @@map("users")
}

model AffiliateLink {
  id            Int      @id @default(autoincrement())
  originalLink  String   @map("original_link")
  productImage  String   @map("product_image")
  catchyPhrase  String   @map("catchy_phrase") @db.VarChar(255)
  affiliateLink String   @map("affiliate_link")
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamp(6)
  updatedAt     DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamp(6)

  @@map("affiliate_links")
}

model PurchasePlatform {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(120)
  description String
  isActive    Boolean  @default(true) @map("is_active")
  apiLink     String   @map("api_link")
  accessKey   String   @map("access_key")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamp(6)
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamp(6)

  @@map("purchase_platforms")
}
